{
  "name": "hermetic-saas-mobile",
  "version": "1.0.0",
  "description": "Production-ready React Native starter template for HermeticSaaS framework",
  "main": "expo-router",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "prebuild": "expo prebuild",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android"
  },
  "dependencies": {
    "expo": "~51.0.0",
    "react": "18.3.1",
    "react-native": "0.74.5",
    "expo-router": "~3.5.0",
    "expo-status-bar": "~1.12.1",
    "expo-splash-screen": "~0.27.0",
    "expo-system-ui": "~3.0.0",
    "expo-constants": "~16.0.0",
    "expo-linking": "~6.3.0",
    "expo-updates": "~0.25.0",

    "@react-navigation/native": "^6.1.18",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native-stack": "^6.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "~3.31.1",

    "@supabase/supabase-js": "^2.45.4",
    "@react-native-async-storage/async-storage": "1.23.1",
    "expo-secure-store": "~13.0.0",
    "react-native-url-polyfill": "^2.0.0",

    "expo-auth-session": "~5.5.0",
    "expo-crypto": "~13.0.0",
    "expo-web-browser": "~13.0.0",

    "expo-notifications": "~0.28.0",
    "expo-device": "~6.0.0",

    "react-native-revenuecat": "^8.2.1",

    "nativewind": "^4.0.1",
    "tailwindcss": "^3.4.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-gesture-handler": "~2.16.1",

    "expo-image": "~1.12.0",
    "expo-font": "~12.0.0",
    "expo-haptics": "~13.0.0",

    "zustand": "^4.5.5",
    "date-fns": "^3.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~18.3.0",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jest-expo": "~51.0.0",
    "prettier": "^3.3.3",
    "typescript": "~5.3.3"
  },
  "private": true,
  "keywords": [
    "hermetic-saas",
    "react-native",
    "expo",
    "mobile-app",
    "saas-starter",
    "supabase",
    "revenuecat",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
